<div class="row p-2 m-5">
  <div class="col-md-6">
    <h2 class="p-3 text-xl">Login</h2>

    <form class="form login-form p-1">
      <div class="form-group p-1">
        <label for="email-login">username:</label>
        <input class="form-input p-1" type="text" id="email-login" />
      </div>
      <div class="form-group p-1">
        <label for="password-login">password:</label>
        <input class="form-input p-1" type="password" id="password-login" />
      </div>
      <div class="form-group p-1">
        <button class="btn btn-primary p-2 bg-sky-400 text-white" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6 p-1">

    <h2 class="p-3 text-xl">Signup</h2>

    <form class="form signup-form p-1">
      <div class="form-group p-1">
        <label for="name-signup p-1">username:</label>
        <input class="form-input p-1" type="text" id="name-signup" />
      </div>
      <div class="form-group p-1">
        <label for="email-signup">email:</label>
        <input class="form-input p-1" type="text" id="email-signup" />
      </div>
      <div class="form-group p-1">
        <label for="password-signup">new password:</label>
        <input class="form-input p-1" type="password" id="password-signup" />
      </div>
      <div class="form-group p-1">
        <button class="btn btn-primary p-2 bg-sky-400 text-white" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>