{{!-- need to make blog content corresponding to id in url populate this page --}}
<section class="p-5 mx-10 my-2  bg-white drop-shadow-lg border-2 border-double 
                    border-indigo-500 rounded-md text-blue-500">
        <h1 class="text-lg">Title:  {{title}}</h1>
        <p class="bg-slate-100 p-10">Body: {{content}}</p>
        {{!-- <h4>Comment(s):</h4> --}}
            <h4 class="w-1/2 border-2 rounded-md bg-slate-100">Comment(s):</h4>{{#each comments as |comment|}}
            <p class="text-lg p-2 border-bottom">{{comment.comment}}</p>
            {{/each}}
                 <div class="flex p-5 form-group">
            <label for="content">Add A Comment:</label>
            <textarea class="form-input bg-slate-100" id="content" rows="4" cols="50"></textarea>
        </div>
        <button class="p-2 m-2 border-solid rounded-full bg-blue-100 hover:bg-blue-700 hover:text-white font-bold" id="submit">Submit</button>
</section>
